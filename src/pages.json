{
	"easycom": {
		"autoscan": true,
		"custom": {
			"^u--(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^up-(.*)": "uview-plus/components/u-$1/u-$1.vue",
			"^u-([^-].*)": "uview-plus/components/u-$1/u-$1.vue",
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
			"^wd-(.*)": "wot-design-uni/components/wd-$1/wd-$1.vue",
			"^M(.*)": "@/components/M$1/index.vue",
			"^m-(.*)": "@/components/M$1/index.vue"
		}
	},
	"tabBar": {
		"height": "56px",
		"fontSize": "12px",
		"iconWidth": "36px",
		"color": "#7A7E83",
		"selectedColor": "#3cc51f",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/images/main/work.png",
				"selectedIconPath": "static/images/main/work_1.png",
				"text": "首页",
				"custom": true
			},
			{
				"pagePath": "pages/mine/index",
				"iconPath": "static/images/main/mine.png",
				"selectedIconPath": "static/images/main/mine_1.png",
				"text": "我的",
				"custom": true
			}
		]
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/splash/index",
      "layout": false,
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/login/index",
      "layout": false,
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/mine/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/privacy/index",
			"style": {
				"navigationBarTitleText": "个人信息保护政策"
			}
		},
		{
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/auth/index",
			"style": {
				"navigationStyle": "custom"
			}
		},
		{
			"path": "pages/test/index",
			"actions": ["login"],
			"layout": true,
			"style": {
				"navigationStyle": "custom"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "uniapp-best",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#F8F8F8"
	},
	"uniIdRouter": {}
}